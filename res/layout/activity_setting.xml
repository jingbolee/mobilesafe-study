<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lijingbo="http://schemas.android.com/apk/res/com.lijingbo.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/titleStyle"
        android:text="设置中心" />

    <com.lijingbo.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lijingbo:title="自动更新设置"
        lijingbo:update_off="自动更新已关闭"
        lijingbo:update_on="自动更新已开启" />

    <com.lijingbo.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lijingbo:title="电话归属地设置"
        lijingbo:update_off="归属地设置已经关闭"
        lijingbo:update_on="归属地设置已经打开" />

    <com.lijingbo.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        lijingbo:title="归属地提示框风格"
        android:layout_height="wrap_content" />
    
    <com.lijingbo.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        lijingbo:title="归属地提示框位置"
        android:layout_height="wrap_content" />

    <com.lijingbo.mobilesafe.view.SettingItemView
        android:id="@+id/siv_call_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lijingbo:title="黑名单拦截设置"
        lijingbo:update_off="黑名单拦截已关闭"
        lijingbo:update_on="黑名单拦截已开启"/>

    <com.lijingbo.mobilesafe.view.SettingItemView
        android:id="@+id/siv_lock_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        lijingbo:title="看门狗开启设置"
        lijingbo:update_off="看门狗已关闭"
        lijingbo:update_on="看门狗已开启"/>

</LinearLayout>